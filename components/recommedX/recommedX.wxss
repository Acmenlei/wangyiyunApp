/* components/recommed/recomend.wxss */
@import '../../assets/iconfont/iconfont.wxss';
.recommend_container {
  padding:40rpx 0 0 40rpx;
}
.recommend_container image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
}
.header-container {
  height: 40rpx;
  padding-bottom: 20rpx;
  position: relative;
}
.header-container h3 {
  font-weight: 500;
}
.header-container .readmore {
  position: absolute;
  right: 40rpx;
  font-size: 10px;
  font-weight: 200;
  border: 1px solid #f2f2f2;
}
.recommend_container scroll-view {
  width: 100%;
  height: 250rpx;  
  white-space: nowrap;
}
.recommend_container scroll-view .view_item {
  width: 180rpx;
  height: 250rpx;
  margin-right: 20rpx;
  display: inline-block;
  position: relative;
}
.recommend_container scroll-view .view_item view {
  font-size: 20rpx;
  color: white;
  position: absolute;
  right: 5rpx;
  top: 5rpx;
  padding: 5rpx;
}
.recommend_container text {
  font-size: 20rpx;
  margin-top: 10rpx;
  white-space: pre-wrap;
  line-height: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 60rpx;
  overflow: hidden;
}